<%- include('header') %>

    <section style="padding: 20px;">
        <h2 align="center">회원목록조회/수정</h2>
        <table border="1" style="margin: 0 auto; width: 800px; text-align: center;">
            <tr>
                <td>회원번호</td>
                <td>회원성명</td>
                <td>전화번호</td>
                <td>주소</td>
                <td>가입일자</td>
                <td>고객등급</td>
                <td>거주지역</td>
            </tr>
            <% members.forEach(m=> { %>
                <tr>
                    <td><a href="/20251223/update/<%= m.custno %>">
                            <%= m.custno %>
                        </a></td>
                    <td>
                        <%= m.custname %>
                    </td>
                    <td>
                        <%= m.phone %>
                    </td>
                    <td>
                        <%= m.address %>
                    </td>
                    <td>
                        <%= m.joindate %>
                    </td>
                    <td>
                        <%= m.grade=='A' ? 'VIP' : (m.grade=='B' ? '일반' : '직원' ) %>
                    </td>
                    <td>
                        <%= m.city %>
                    </td>
                </tr>
                <% }) %>
        </table>
    </section>

    <%- include('footer') %>